<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_detail_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/store_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="가게이름"
            android:textSize="50dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/storedetailBackgroundView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/media_title">

            <ImageView
                android:id="@+id/store_detail_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType = "centerCrop"
                android:background="@drawable/round_image"
                android:src="@drawable/sample" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/store_detail_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_button1"
                android:text="상세정보"
                android:textSize="30dp"
                android:layout_weight="1"
                tools:ignore="InvalidId" />

            <Button
                android:id="@+id/store_detail_review"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_button2"
                android:text="리뷰"
                android:textSize="30dp"
                android:layout_weight="1"
                tools:ignore="InvalidId" />

        </LinearLayout>

        <TextView
            android:id="@+id/store_detail_telNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="가게번호"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/store_detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="가게주소"
            android:textSize="30dp" />

    </LinearLayout>


</ScrollView>